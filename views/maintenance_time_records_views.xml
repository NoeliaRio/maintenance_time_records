<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_maintenance_time_records_tree" model="ir.ui.view">
        <field name="name">maintenance.time.records.tree</field>
        <field name="model">maintenance.time_records</field>
        <field name="arch" type="xml">
            <tree string="Registros de tiempo">
                <field name="maintenance_request_id"/>
                <field name="time_type"/>
                <field name="pause_cause_id" attrs="{'invisible': [('time_type', '!=', 'pause')]}"/>
                <field name="start_datetime"/>
                <field name="end_datetime"/>
                <field name="duration_display" readonly="1"/>
                <field name="duration_hours" readonly="1"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

    <record id="view_maintenance_time_records_form" model="ir.ui.view">
        <field name="name">maintenance.time.records.form</field>
        <field name="model">maintenance.time_records</field>
        <field name="arch" type="xml">
            <form string="Registro de tiempo">
                <sheet>
                    <group>
                        <field name="maintenance_request_id" context="{'default_maintenance_request_id': active_id}"/>
                        <field name="time_type"/>
                        <field name="pause_cause_id" attrs="{'invisible': [('time_type', '!=', 'pause')], 'required': [('time_type', '=', 'pause')]}"/>
                        <field name="start_datetime"/>
                        <field name="end_datetime"/>
                        <field name="duration_display" readonly="1"/>
                        <field name="duration_hours" readonly="1"/>
                        <field name="description"/>
                        <field name="company_id" groups="base.group_multi_company"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_maintenance_pause_cause_tree" model="ir.ui.view">
        <field name="name">maintenance.pause.cause.tree</field>
        <field name="model">maintenance.pause.cause</field>
        <field name="arch" type="xml">
            <tree string="Causas de pausa">
                <field name="name"/>
                <field name="description"/>
                <field name="active" widget="boolean_toggle"/>
            </tree>
        </field>
    </record>

    <record id="view_maintenance_pause_cause_form" model="ir.ui.view">
        <field name="name">maintenance.pause.cause.form</field>
        <field name="model">maintenance.pause.cause</field>
        <field name="arch" type="xml">
            <form string="Causa de pausa">
                <group>
                    <field name="name"/>
                    <field name="description"/>
                    <field name="active" invisible="1"/>
                </group>
                <footer>
                    <button name="toggle_active"
                            string="Archivar"
                            type="object"
                            class="oe_highlight"
                            attrs="{'invisible': [('active', '=', False)]}"/>
                    <button name="toggle_active"
                            string="Restaurar"
                            type="object"
                            attrs="{'invisible': [('active', '=', True)]}"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_maintenance_time_records" model="ir.actions.act_window">
        <field name="name">Registros de tiempos</field>
        <field name="res_model">maintenance.time_records</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_maintenance_time_records_tree"/>
    </record>

    <menuitem id="menu_maintenance_time_records"
              name="Registro de tiempos"
              parent="maintenance.menu_maintenance_title"
              action="action_maintenance_time_records"
              sequence="55"/>

    <record id="action_maintenance_pause_cause" model="ir.actions.act_window">
        <field name="name">Causas de pausa</field>
        <field name="res_model">maintenance.pause.cause</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_maintenance_pause_cause_tree"/>
    </record>

    <menuitem id="menu_maintenance_pause_cause"
              name="Causas de pausa"
              parent="maintenance.menu_maintenance_title"
              action="action_maintenance_pause_cause"
              sequence="56"/>

</odoo>

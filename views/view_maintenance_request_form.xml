<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_maintenance_request_form_inherit_dates" model="ir.ui.view">
        <field name="name">maintenance.request.form.inherit.dates</field>
        <field name="model">maintenance.request</field>
        <field name="inherit_id" ref="maintenance.hr_equipment_request_view_form"/>
        <field name="arch" type="xml">
            <header position="inside">
                <field name="is_revision" invisible="1"/>
                <field name="is_finish" invisible="1"/>
                <button
                    string="Finalizar"
                    type="object"
                    name="button_open_view_finish_custom"
                    class="btn btn-success"
                    icon="fa-check"
                    groups="maintenance_time_records.group_maintenance_technical_admin"
                    attrs="{'invisible': [('is_revision', '=', False)]}"/>
                <button
                    string="Cancelar"
                    type="object"
                    name="button_open_view_cancelled_custom"
                    class="btn btn-danger"
                    icon="fa-close"
                    groups="maintenance_time_records.group_maintenance_technical_admin"
                    attrs="{'invisible': [('is_finish', '=', True)]}"/>
            </header>
            <xpath expr="//button[@name='archive_equipment_request']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <field name="equipment_id" position="before">
                <field name="code" string="CÃ³digo" readonly="1"
                    modifiers="{&quot;invisible&quot;: [[&quot;code&quot;, &quot;=&quot;, &quot;/&quot;]], &quot;readonly&quot;: true}"/>
                <field name="maintenance_plan_id"/>
            </field>
            <field name="equipment_id" position="before">
                <field name="hours_equipment_use"/>
            </field>
            <xpath expr="//group" position="inside">
                <group string="Tiempos reales">
                    <field name="start_date"/>
                    <field name="end_date"/>
                </group>
            </xpath>
            <xpath expr="//field[@name='request_date']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>

    <record id="view_maintenance_request_kanban_inherit_date" model="ir.ui.view">
        <field name="name">maintenance.request.kanban.inherit.date</field>
        <field name="model">maintenance.request</field>
        <field name="inherit_id" ref="maintenance.hr_equipment_request_view_kanban"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@class='o_kanban_record_body']/span[field[@name='category_id']]" position="after">
                <br/>
                <span class="o_field_label">
                    <strong>Fecha Prevista: </strong>
                    <field name="schedule_date" widget="date" options="{'format': 'dd/MM/yyyy'}"/>
                </span>
            </xpath>
        </field>
    </record>

    <record id="view_maintenance_request_form_inherit_instructive" model="ir.ui.view">
        <field name="name">maintenance.request.form.inherit.instructive</field>
        <field name="model">maintenance.request</field>
        <field name="inherit_id" ref="maintenance_plan.hr_equipment_request_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook/page[@name='description_page']" position="before">
                <page string="Instructivo de Mantenimiento">
                    <group>
                        <field name="instruction_pdf" widget="pdf_viewer" attrs="{'invisible': [('instruction_pdf', '=', False)]}" readonly="1"/>
                    </group>
                </page>
                <page string="Otros datos">
                    <group>
                        <field name="issue_date"/>
                        <field name="date_limit"/>
                        <field name="cancellation_date_time"/>
                        <field name="check_date_time"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>

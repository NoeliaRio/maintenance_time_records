<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_maintenance_request_form_inherit_safe" model="ir.ui.view">
        <field name="name">maintenance.request.form.inherit.safe</field>
        <field name="model">maintenance.request</field>
        <field name="inherit_id" ref="maintenance.hr_equipment_request_view_form"/>
        <field name="arch" type="xml">

            <!-- NO TOCAR HEADER -->

            <!-- Campos técnicos necesarios -->
            <xpath expr="//sheet" position="inside">
                <field name="time_state" invisible="1"/>
                <field name="is_revision" invisible="1"/>
                <field name="is_finish" invisible="1"/>
            </xpath>

            <!-- Botones funcionales, fuera del header -->
            <xpath expr="//sheet" position="before">
                <div class="oe_button_box" name="button_box">

                    <button name="action_start_time"
                            type="object"
                            string="Inicio"
                            class="oe_stat_button"
                            attrs="{'invisible': [('time_state', '!=', 'idle')]}"/>

                    <button name="action_pause_time"
                            type="object"
                            string="Pausa"
                            class="oe_stat_button"
                            attrs="{'invisible': [('time_state', '!=', 'active')]}"/>

                    <button name="action_continue_time"
                            type="object"
                            string="Continuar"
                            class="oe_stat_button"
                            attrs="{'invisible': [('time_state', '!=', 'pause')]}"/>

                    <button name="action_finish_time"
                            type="object"
                            string="Finalizar tiempo"
                            class="oe_stat_button"
                            attrs="{'invisible': [('time_state', '!=', 'active')]}"/>

                </div>
            </xpath>

            <!-- Campos básicos necesarios -->
            <xpath expr="//field[@name='equipment_id']" position="before">
                <field name="code" readonly="1"/>
                <field name="maintenance_plan_id"/>
                <field name="hours_equipment_use"/>
            </xpath>

            <!-- Fechas reales -->
            <xpath expr="//group" position="inside">
                <group string="Tiempos reales">
                    <field name="start_date"/>
                    <field name="end_date"/>
                </group>
            </xpath>

        </field>
    </record>

</odoo>